		name="kpl Server"
		target="$INSTALL_PATH\kpl.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start kpl server"
		iconFile="$INSTALL_PATH\html\ui\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
